{
  "manifest_version": 3,
  "name": "Chess.com Analyzer",
  "version": "1.0",
  "description": "Analyse en temps r√©el de vos parties Chess.com",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*",
    "https://explorer.lichess.ovh/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/play/*", "https://www.chess.com/game/live/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}